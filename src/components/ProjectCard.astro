---
import type { GraphEntity } from "../sdk/types.gen";
import HeroImage from "./HeroImage.astro";
import { getProjectUrl } from "../lib/url";

type Props = {
  project: Pick<GraphEntity, 'name' | 'slug' | 'attributes' | 'heroImage'>;
}

const { project } = Astro.props;
---

<article class="bg-white rounded shadow border border-sky-600">
  {
    project.heroImage && (
      <a href={getProjectUrl(project.slug)}>
        <HeroImage image={project.heroImage} alt={project.name} />
      </a>
    )
  }
  <div class="p-4">
    <h2 class="text-2xl font-medium m-0 mb-2">
      <a href={getProjectUrl(project.slug)}>{project.name}</a>
    </h2>
    {
      project.attributes?.category && (
        <p class="text-base text-gray-500 mb-2">
          {project.attributes.category}
        </p>
      )
    }
    {
      project.attributes?.description && (
        <p class="text-gray-600 mb-2">{project.attributes.description}</p>
      )
    }
    {
      project.attributes?.techStack && (
        <p class="text-base text-gray-500 mb-2 border-t pt-2">
          {project.attributes.techStack}
        </p>
      )
    }
  </div>
</article>
