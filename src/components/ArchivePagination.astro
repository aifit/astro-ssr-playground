---
import type { PaginationMeta } from "../sdk/types.gen";

interface Props {
  pagination: PaginationMeta;
  basePath: string;
  itemLabel: string;
}

const { pagination, basePath, itemLabel } = Astro.props;
---

<nav class="flex justify-between items-center">
  <div class="flex-1">
    {
      pagination.page < pagination.totalPages && (
        <a href={`${basePath}?page=${pagination.page + 1}`}>← Older</a>
      )
    }
  </div>
  <p class="flex-1 text-center">
    Page {pagination.page} of {pagination.totalPages} (Total: {pagination.total}
    {itemLabel})
  </p>
  <div class="flex-1 text-right">
    {
      pagination.page > 1 && (
        <a href={`${basePath}?page=${pagination.page - 1}`}>Newer →</a>
      )
    }
  </div>
</nav>
