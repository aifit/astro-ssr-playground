---
import BaseLayout from "../layouts/BaseLayout.astro";
import { minima } from "../lib/minima";
import ArticleCard from "../components/ArticleCard.astro";
import { getSiteName } from "../config/site";

const title = await getSiteName();
const description =
  "This is a small playground for exploring Astro with Server Side Rendering.";

// Fetch articles (limit to 3 for homepage)
const response = await minima.getPublicArticles();
const articles = response.data?.data || [];

// Fetch projects (limit to 4 for homepage)
const projectsResponse = await minima.getPublicEntities({ limit: 4 });
const projects = projectsResponse.data?.data || [];
---

<BaseLayout title={title} description={description}>
  <div
    class="max-w-4xl mx-auto p-10 flex flex-col items-center justify-center bg-white shadow border rounded border-sky-600 mb-4 text-center"
  >
    <h1 class="text-3xl font-medium mb-2">{title}</h1>
    <p class="text-lg text-gray-600">{description}</p>
  </div>
  <div class="max-w-4xl mx-auto my-4">
    <h1 class="mb-4 text-2xl">Latest Articles</h1>

    {
      articles.length === 0 ? (
        <p>No articles found.</p>
      ) : (
        <div class="grid grid-cols-2 gap-4">
          {articles.map((article) => (
            <ArticleCard article={article} />
          ))}
        </div>
      )
    }
  </div>

  <div class="max-w-4xl mx-auto my-4">
    <h1 class="mb-4 text-2xl">Latest Projects</h1>
    {
      projects.length === 0 ? (
        <p>No projects found.</p>
      ) : (
        <div class="grid grid-cols-2 gap-4">
          {projects.map((project: any) => (
            <article class="bg-white rounded shadow border border-sky-600">
              <div class="p-4">
                <h2 class="text-2xl font-medium m-0 mb-2">
                  <a href={`/project/${project.slug}`}>{project.name}</a>
                </h2>
                {project.attributes?.description && (
                  <p class="text-gray-600 mb-2">
                    {project.attributes.description}
                  </p>
                )}
                {project.attributes?.techStack && (
                  <p class="text-sm text-gray-500 mb-2">
                    <strong>Tech:</strong> {project.attributes.techStack}
                  </p>
                )}
                {project.attributes?.year && (
                  <p class="text-sm text-gray-500">
                    <strong>Year:</strong> {project.attributes.year}
                  </p>
                )}
              </div>
            </article>
          ))}
        </div>
      )
    }
  </div>
</BaseLayout>
