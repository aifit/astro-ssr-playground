---
import BaseLayout from "../layouts/BaseLayout.astro";
import { minima } from "../lib/minima";
import ArticleCard from "../components/ArticleCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { getSiteName } from "../config/site";

const title = await getSiteName();
const description =
  "This is a small playground for exploring Astro with Server Side Rendering using Minima CMS.";

// Fetch articles (limit to 2 for homepage)
const response = await minima.getPublicArticles({ limit: 2 });
const articles = response.data?.data || [];

// Fetch projects (limit to 2 for homepage)
const projectsResponse = await minima.getPublicEntities({ limit: 2 });
const projects = projectsResponse.data?.data || [];
---

<BaseLayout title={title} description={description}>
  <div
    class="max-w-4xl mx-auto p-10 flex flex-col items-center justify-center bg-white shadow border rounded border-sky-600 mb-4 text-center"
  >
    <h1 class="text-3xl font-medium mb-2">{title}</h1>
    <p class="text-lg text-gray-600">{description}</p>
  </div>
  <div class="max-w-4xl mx-auto my-4">
    <h1 class="mb-4 text-3xl text-center">Latest Articles</h1>

    {
      articles.length === 0 ? (
        <p>No articles found.</p>
      ) : (
        <div class="grid grid-cols-2 gap-4">
          {articles.map((article) => (
            <ArticleCard article={article} />
          ))}
        </div>
      )
    }
    <div class="text-center mt-6 mb-10">
      <a
        href="/articles"
        class="inline-block bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700"
      >
        View All Articles →
      </a>
    </div>
  </div>

  <div class="max-w-4xl mx-auto my-4">
    <h1 class="mb-4 text-3xl text-center">Latest Projects</h1>
    {
      projects.length === 0 ? (
        <p>No projects found.</p>
      ) : (
        <div class="grid grid-cols-2 gap-4">
          {projects.map((project) => (
            <ProjectCard project={project} />
          ))}
        </div>
      )
    }
    <div class="text-center mt-6">
      <a
        href="/projects"
        class="inline-block bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700"
      >
        View All Projects →
      </a>
    </div>
  </div>
</BaseLayout>
