---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArchivePagination from "../../components/ArchivePagination.astro";
import { minima } from "../../lib/minima";
import { getCategoryUrl } from "../../lib/url";
import { buildTitle } from "../../config/site";
import ArticleCard from "../../components/ArticleCard.astro";

// Get category slug from URL params
const { slug } = Astro.params;

// Get pagination parameters from URL
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get("page") || "1");
const limit = 10;
const offset = (page - 1) * limit;

// Fetch articles by category
const response = await minima.getPublicArticles({
  limit,
  offset,
  category: slug,
});

const articles = response.data?.data || [];
const pagination = response.data?.pagination;

// Get category name from first article (if available)
const categoryName =
  articles.length > 0 && articles[0].categories.length > 0
    ? articles[0].categories.find((cat) => cat.slug === slug)?.name || slug
    : slug;

const categoriesResponse = await minima.getPublicCategories();
const categories = categoriesResponse.data?.data || [];

const title = await buildTitle(categoryName);
const description = `Articles in ${categoryName} category`;
---

<BaseLayout title={title} description={description}>
  <div class="max-w-4xl mx-auto">
    <div
      class="max-w-4xl mx-auto bg-white p-4 rounded shadow border border-sky-600 mb-4"
    >
      {
        categories.length > 0 && (
          <div>
            <strong>Categories &nbsp;</strong>
            {categories.map((cat) => (
              <a
                href={getCategoryUrl(cat)}
                class="mr-2 text-blue-600 hover:underline"
              >
                {cat.name}
              </a>
            ))}
          </div>
        )
      }
    </div>
    {
      articles.length === 0 ? (
        <p>No articles found in this category.</p>
      ) : (
        <div class="max-w-4xl mx-auto my-4">
          <h1 class="text-2xl font-medium m-0 mb-4">{categoryName}</h1>
          <div class="grid grid-cols-2 gap-4">
            {articles.map((article) => (
              <ArticleCard article={article} />
            ))}
          </div>
        </div>
      )
    }
  </div>
  {
    pagination && (
      <div class="max-w-4xl mx-auto">
        <div class="max-w-4xl mx-auto bg-white p-4 rounded shadow border border-sky-600 mb-4">
          <ArchivePagination
            pagination={pagination}
            basePath={`/category/${slug}`}
            itemLabel="articles"
          />
        </div>
      </div>
    )
  }
</BaseLayout>
