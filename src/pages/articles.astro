---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArchivePagination from "../components/ArchivePagination.astro";
import { minima } from "../lib/minima";
import ArticleCard from "../components/ArticleCard.astro";
import { buildTitle } from "../config/site";
import Taxonomy from "../components/Taxonomy.astro";
import { deduplicateTags } from "../lib/taxonomy";

const title = await buildTitle("Articles");
const description = "Latest Articles";

// Get pagination parameters from URL
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get("page") || "1");
const limit = 4;
const offset = (page - 1) * limit;

// Fetch categories
const categoriesResponse = await minima.getPublicCategories();
const categories = categoriesResponse.data?.data || [];

// Fetch articles
const response = await minima.getPublicArticles({ limit, offset });
const articles = response.data?.data || [];
const pagination = response.data?.pagination;

// Fetch tags
const tags = deduplicateTags(articles);
---

<BaseLayout title={title} description={description}>
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-medium m-0 mb-4 text-center">All Articles</h1>

    {
      categories.length > 0 && (
        <Taxonomy
          variant="category"
          label="All Categories"
          items={categories}
        />
      )
    }

    {
      tags.length > 0 && (
        <Taxonomy variant="tag" label="All Tags" items={tags} />
      )
    }

    {
      articles.length === 0 ? (
        <p>No articles found.</p>
      ) : (
        <div class="max-w-4xl mx-auto my-4">
          <div class="grid grid-cols-2 gap-4">
            {articles.map((article) => (
              <ArticleCard article={article} />
            ))}
          </div>
        </div>
      )
    }
  </div>
  <div
    class="max-w-4xl mx-auto bg-white p-4 rounded shadow border border-sky-600 mt-4"
  >
    {
      pagination && (
        <ArchivePagination
          pagination={pagination}
          basePath="/articles"
          itemLabel="articles"
        />
      )
    }
  </div>
</BaseLayout>
