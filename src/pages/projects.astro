---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArchivePagination from "../components/ArchivePagination.astro";
import { minima } from "../lib/minima";
import { buildTitle } from "../config/site";
import HeroImage from "../components/HeroImage.astro";

const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get("page") || "1");
const limit = 4;
const offset = (page - 1) * limit;

// Fetch all projects
const response = await minima.getPublicEntities();
const allProjects = response.data?.data || [];

// Paginate
const paginatedProjects = allProjects.slice(offset, offset + limit);

const pagination = {
  total: allProjects.length,
  limit,
  offset,
  page,
  totalPages: Math.ceil(allProjects.length / limit),
};

const projects = paginatedProjects;

const title = await buildTitle("Projects");
const description = "Latest Projects";
---

<BaseLayout title={title} description={description}>
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-medium m-0 mb-4 text-center">All Projects</h1>

    <div class="max-w-4xl mx-auto my-4">
      {
        projects.length === 0 ? (
          <p>No projects found.</p>
        ) : (
          <div class="grid grid-cols-2 gap-4">
            {projects.map((project: any) => (
              <article class="bg-white rounded shadow border border-sky-600">
                {project.heroImage && (
                  <a href={`/project/${project.slug}`}>
                    <HeroImage image={project.heroImage} alt={project.name} />
                  </a>
                )}
                <div class="p-4">
                  <h2 class="text-2xl font-medium m-0 mb-2">
                    <a href={`/project/${project.slug}`}>{project.name}</a>
                  </h2>
                  {project.attributes?.category && (
                    <p class="text-base text-gray-500 mb-2">
                      {project.attributes.category}
                    </p>
                  )}
                  {project.attributes?.description && (
                    <p class="text-gray-600 mb-2">
                      {project.attributes.description}
                    </p>
                  )}
                  {project.attributes?.techStack && (
                    <p class="text-base text-gray-500 mb-2 border-t pt-2">
                      {project.attributes.techStack}
                    </p>
                  )}
                </div>
              </article>
            ))}
          </div>
        )
      }
    </div>
  </div>
  <div
    class="max-w-4xl mx-auto bg-white p-4 rounded shadow border border-sky-600 mt-4"
  >
    {
      pagination && (
        <ArchivePagination
          pagination={pagination}
          basePath="/projects"
          itemLabel="projects"
        />
      )
    }
  </div>
</BaseLayout>
